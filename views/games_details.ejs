<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <%- include(`./layout`) %> 
    <div>
    <h1><%= title %></h1>
      <div>
       <h1><%= game.name %> </h1>
        <p><%=game.description %> </p>
        <p>Amount <%= game.amount %> </p>
        <%game.plataform.map(plataform=>{ %> 
          <a href=catalog/plataforms/<%= plataform._id %>><%= plataform.name %> </a>
          <% })  %> 
          <%game.category.map(category=>{ %> 
            <a href=catalog/categorys/<%= category._id %>><%= category.name %> </a>
            <% })  %> 
            <div>
                <button>Update</button>
                <button>Delete</button>
            </div>
          </div>
    </div>
  </body>
</html>
